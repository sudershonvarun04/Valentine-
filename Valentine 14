<script>
/* Countdown */
let c=3;
const count=document.getElementById("count");
const cd=setInterval(()=>{
  c--;
  count.innerText=c;
  if(c===0){
    clearInterval(cd);
    document.getElementById("countdown").style.display="none";
    document.getElementById("main").classList.remove("hidden");
  }
},1000);

/* No Button Run */
const no=document.getElementById("no");
no.addEventListener("mouseover",()=>{
  no.style.left=Math.random()*80+"vw";
  no.style.top=Math.random()*60+"vh";
});

/* Yes Click */
document.getElementById("yes").onclick=()=>{
  document.getElementById("main").style.display="none";
  document.getElementById("celebrate").classList.remove("hidden");
  document.getElementById("music").play();
  flowers();
  startSlide();
  typeWriter();
  shareLink();
};

/* Flowers */
function flowers(){
  setInterval(()=>{
    const f=document.createElement("div");
    f.className="flower";
    f.innerHTML="‚ú®  ‚ùÑÔ∏è  üí´";
    f.style.left=Math.random()*100+"vw";
    f.style.animationDuration=3+Math.random()*5+"s";
    document.body.appendChild(f);
    setTimeout(()=>f.remove(),8000);
  },200);
}

/* Slideshow */
let slideIndex=0;
const imgs=document.querySelectorAll(".slideshow img");
function startSlide(){
  imgs[0].style.opacity=1;
  setInterval(()=>{
    imgs.forEach(i=>i.style.opacity=0);
    slideIndex=(slideIndex+1)%imgs.length;
    imgs[slideIndex].style.opacity=1;
  },3000);
}

/* Typewriter */
const text="I choose you. Today, tomorrow, always ‚ù§Ô∏è";
let i=0;
function typeWriter(){
  if(i<text.length){
    document.getElementById("typeText").innerHTML+=text.charAt(i);
    i++;
    setTimeout(typeWriter,70);
  }
}

/* WhatsApp */
function shareLink(){
  const msg="She said YES üíñüòç This is our moment!";
  document.getElementById("share").href=
  "https://wa.me/?text="+encodeURIComponent(msg);
}
</script>

